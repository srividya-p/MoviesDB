<%- contentFor('HeaderCss') %>
    <!-- perticular page css -->
    <link href="public/plugins/dropzone/dist/dropzone.css" rel="stylesheet" type="text/css">
    <style>
        label,
        input,
        button {
            font-size: medium;
        }
    </style>
    <%- contentFor('body') %>

        <div class="wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card m-b-20">
                            <div class="card-body">
                                <form method="POST" action="/movie-added">
                                    <div class="form-group">
                                        <label>Movie Name</label>
                                        <input required type="text" name="movie_name" style="font-size: 15px;"
                                            class="colorpicker-default form-control" value=""
                                            placeholder="Enter a Movie">
                                    </div>

                                    <div class="form-group">
                                        <label>Movie Image</label>
                                        <input required type="text" name="image_url" style="font-size: 15px;"
                                            class="colorpicker-default form-control" value=""
                                            placeholder="Enter a Link">
                                    </div>
                                    <div class="form-group">
                                        <label>Release Year</label>
                                        <input required type="text" name="release_year"
                                            class="colorpicker-default form-control" style="font-size: 15px;" value=""
                                            placeholder="Enter Release Year">
                                    </div>

                                    <div class="form-group">
                                        <label>Description</label>
                                        <textarea required name="description" style="font-size: 15px;"
                                            class="colorpicker-default form-control"
                                            placeholder="Enter Description"></textarea>
                                    </div>

                                    <div class="form-group">
                                        <div>
                                            <button style="float: left;" type="submit" class="btn-lg btn-success waves-effect waves-light"><i
                                                    class="mdi mdi-plus-circle"></i><span></span>&emsp;Add</button> &emsp;&emsp;
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end row -->
            </div> <!-- end container-fluid -->
        </div>
        <!-- end wrapper -->
        <%- contentFor('FooterJs') %>
            <!--Morris Chart-->
            <script src="public/plugins/morris/morris.min.js"></script>
            <script src="public/plugins/raphael/raphael-min.js"></script>
            <script src="public/assets/pages/dashboard.js"></script>
            <script src="public/plugins/bootstrap-filestyle/js/bootstrap-filestyle.min.js"></script>